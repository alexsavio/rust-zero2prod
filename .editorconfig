root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[*{.yml,.yaml,.json}]
indent_size = 2

[*.tf]
indent_size = 2

[*.sh]
indent_size = 2

[justfile]
indent_size = 2
